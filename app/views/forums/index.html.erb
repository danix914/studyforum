<h5>Welocome to the homework forum...Q_Q</h5>

<table>
  <tr>
    <%#<th>Board</th>%>
    <th>Board/Description</th>
    <th>版主</th>
    <th>Category</th>
    <th>文章數</th>
    <th>Created Time</th>
    <th>Updated Time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @forums.each do |forum| %>
  <tr>
    <td align=center>
      <%= link_to forum.board_name, forum %><br />
      <%= forum.description %>
    </td>
    <td><%= forum.board_owner %></td>
    <td><%= forum.category %></td>
    <td><%= forum.articles_count %></td>
    <td><%= forum.created_at %></td>
    <td><%= forum.updated_at %></td>
    <td><%= link_to 'Show', forum %></td>
    <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
    <td><%= link_to 'Destroy', forum, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

